{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDirs": ["./src", "../shared"],  
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*",       
    "../shared/**/*"   
  ],
  "exclude": [
    "node_modules"
  ]
}
